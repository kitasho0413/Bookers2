<div>
  <%= image_tag @user.get_profile_image(63,63)  %>
  <h3>name <%= @user.name %></h3>
  <h3>Introduction <%= @user.introduction %></h3>
  <% if @user == current_user %>
    <p><%= link_to "編集", edit_user_path(@user) %></p>
  <% end %> 
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>  

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
  <p><%= book.title %></p>
  <% end %>
  <p><%= book.body %></p>
</div>
<% end %>